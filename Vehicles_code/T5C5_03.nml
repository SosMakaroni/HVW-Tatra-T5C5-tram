//--------------A
spriteset(ss_T5C5a_03_depo, "src/T5C5a_03_depo.png")		{tmpl_depo()}
spriteset(ss_T5C53a_01, "src/T5C5a_01_1x_8bpp.png")		{tmpl_1(1)}
spriteset(ss_T5C53a_02, "src/T5C5a_02_1x_8bpp.png")		{tmpl_1(1)}
spriteset(ss_T5C53a_03, "src/T5C5a_03_1x_8bpp.png")		{tmpl_1(1)}
